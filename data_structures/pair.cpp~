// Pair is in the <utility> header

// pair <data_type1, data_type2> Pair_name;

#include<iostream>
#include<utility>

int main()
{
	std::pair <int, char> PAIR1; 
	PAIR1.first = 100; 
	PAIR1.second = 'G'; 

	std::cout << PAIR1.first << " ";
	std::cout << PAIR1.second << std::endl;

	return 0;
}

